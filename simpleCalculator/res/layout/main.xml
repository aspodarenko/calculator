<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="10dp">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:padding="10dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notificationText" android:layout_gravity="left|center_vertical" android:textSize="20dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText" android:layout_gravity="center_vertical|left" android:gravity="left"/>
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent" android:layout_gravity="left|center_vertical"
                android:layout_weight="1">
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <Button
                        android:text="1"
                        android:id="@+id/figure1" android:layout_column="1"
                        style="@style/button_style"/>
                <Button style="@style/button_style" android:text="2" android:id="@+id/figure2" android:layout_column="2"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <Button style="@style/button_style" android:text="3" android:id="@+id/figure3" android:layout_column="3"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <Button style="@style/button_style" android:text="+" android:id="@+id/plus" android:layout_column="4"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <Button style="@style/button_style" android:text="C" android:id="@+id/clear" android:layout_column="5"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:textStyle="bold"/>
            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <Button style="@style/button_style" android:text="4" android:id="@+id/figure4" android:layout_column="1"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <Button style="@style/button_style" android:text="5" android:id="@+id/figure5" android:layout_column="2"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <Button style="@style/button_style" android:text="6" android:id="@+id/figure6" android:layout_column="3"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <Button style="@style/button_style" android:text="-" android:id="@+id/minus" android:layout_column="4"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <Button style="@style/button_style" android:text="7" android:id="@+id/figure7" android:layout_column="1"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <Button style="@style/button_style" android:text="8" android:id="@+id/figure8" android:layout_column="2"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <Button style="@style/button_style" android:text="9" android:id="@+id/figure9" android:layout_column="3"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <Button style="@style/button_style" android:text="*" android:id="@+id/multiplication" android:layout_column="4"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <Button style="@style/button_style" android:text="." android:id="@+id/dot" android:layout_column="1"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <Button style="@style/button_style" android:text="0" android:id="@+id/figure0" android:layout_column="2"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <Button style="@style/button_style" android:text="=" android:id="@+id/equal" android:layout_column="3"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <Button style="@style/button_style" android:text="/" android:id="@+id/dividing" android:layout_column="4"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>

